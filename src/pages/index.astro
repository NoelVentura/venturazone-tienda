<style>
  .bg-grid-pattern {
    background-image: 
      linear-gradient(rgba(59, 130, 246, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(59, 130, 246, 0.1) 1px, transparent 1px);
    background-size: 20px 20px;
  }
</style>

<script>
  // Declaración de tipo para la función global
  declare global {
    interface Window {
      openBotpressChat?: () => boolean;
    }
  }

  // Agregar funcionalidad al botón de chat
  document.addEventListener('DOMContentLoaded', function() {
    const chatButton = document.getElementById('chat-button');
    
    if (chatButton) {
      // Agregar efectos visuales
      chatButton.addEventListener('mouseenter', function() {
        this.style.transform = 'scale(1.05)';
        this.style.cursor = 'pointer';
      });
      
      chatButton.addEventListener('mouseleave', function() {
        this.style.transform = 'scale(1)';
      });
      
      // Agregar funcionalidad de clic
      chatButton.addEventListener('click', function() {
        console.log('Botón de Atención Personalizada clickeado');
        
        // Usar la función global
        if (typeof window.openBotpressChat === 'function') {
          const success = window.openBotpressChat?.();
          if (!success) {
            // Si no funciona, esperar y volver a intentar
            setTimeout(function() {
              const retrySuccess = window.openBotpressChat?.();
              if (!retrySuccess) {
                alert('Chat disponible en breve. Por favor, espera unos segundos y vuelve a intentar.');
              }
            }, 2000);
          }
        } else {
          alert('Chat disponible en breve. Por favor, espera unos segundos y vuelve a intentar.');
        }
      });
    }
  });
  
  // Script básico para videos
  document.addEventListener('DOMContentLoaded', function() {
    console.log('🎬 Videos configurados con autoplay');
    
    // Función para reproducir videos automáticamente
    function playVideos() {
      const videos = document.querySelectorAll('video');
      
      videos.forEach((video, index) => {
        console.log(`🎬 Intentando reproducir video ${index + 1}`);
        
        // Configurar propiedades
        video.muted = true;
        video.loop = true;
        video.playsInline = true;
        
        // Intentar reproducir
        video.play().then(() => {
          console.log(`✅ Video ${index + 1} reproduciéndose automáticamente`);
        }).catch((error) => {
          console.log(`⚠️ Video ${index + 1} no puede reproducirse automáticamente: ${error.message}`);
        });
      });
    }
    
    // Intentar reproducir inmediatamente
    playVideos();
    
    // Intentar reproducir después de un delay
    setTimeout(playVideos, 1000);
    
    // Intentar reproducir en cualquier interacción del usuario
    const enableOnInteraction = () => {
      playVideos();
      document.removeEventListener('click', enableOnInteraction);
      document.removeEventListener('touchstart', enableOnInteraction);
    };
    
    document.addEventListener('click', enableOnInteraction);
    document.addEventListener('touchstart', enableOnInteraction);
  });

  // Script para la navegación de productos
  document.addEventListener('DOMContentLoaded', function() {
    const productsContainer = document.getElementById('products-container') as HTMLElement;
    const prevBtn = document.getElementById('prev-btn') as HTMLButtonElement;
    const nextBtn = document.getElementById('next-btn') as HTMLButtonElement;
    const indicators = document.querySelectorAll('.scroll-indicator') as NodeListOf<HTMLElement>;
    
    if (!productsContainer || !prevBtn || !nextBtn) return;
    
    const cardWidth = 320; // Ancho de cada tarjeta + gap
    let currentIndex = 0;
    const maxIndex = Math.max(0, Math.floor((productsContainer.scrollWidth - productsContainer.clientWidth) / cardWidth));
    
    // Función para actualizar indicadores
    function updateIndicators(): void {
      indicators.forEach((indicator: HTMLElement, index: number) => {
        indicator.classList.toggle('active', index === currentIndex);
      });
    }
    
    // Función para hacer scroll
    function scrollToIndex(index: number): void {
      currentIndex = Math.max(0, Math.min(index, maxIndex));
      const scrollPosition = currentIndex * cardWidth;
      productsContainer.scrollTo({
        left: scrollPosition,
        behavior: 'smooth'
      });
      updateIndicators();
    }
    
    // Event listeners para botones
    prevBtn.addEventListener('click', () => {
      scrollToIndex(currentIndex - 1);
    });
    
    nextBtn.addEventListener('click', () => {
      scrollToIndex(currentIndex + 1);
    });
    
          // Event listener para scroll manual
      productsContainer.addEventListener('scroll', () => {
        if (productsContainer) {
          const scrollPosition = productsContainer.scrollLeft;
          currentIndex = Math.round(scrollPosition / cardWidth);
          updateIndicators();
        }
      });
    
    // Event listeners para indicadores
    indicators.forEach((indicator: HTMLElement, index: number) => {
      indicator.addEventListener('click', () => {
        scrollToIndex(index);
      });
    });
    
    // Auto-scroll cada 5 segundos
    let autoScrollInterval = setInterval(() => {
      if (currentIndex >= maxIndex) {
        scrollToIndex(0);
      } else {
        scrollToIndex(currentIndex + 1);
      }
    }, 5000);
    
    // Pausar auto-scroll al hacer hover
    productsContainer.addEventListener('mouseenter', () => {
      clearInterval(autoScrollInterval);
    });
    
    productsContainer.addEventListener('mouseleave', () => {
      autoScrollInterval = setInterval(() => {
        if (currentIndex >= maxIndex) {
          scrollToIndex(0);
        } else {
          scrollToIndex(currentIndex + 1);
        }
      }, 5000);
    });
    
    // Inicializar indicadores
    updateIndicators();
  });

  

</script>
